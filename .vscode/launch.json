{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Executable Cargo",
      "program": "${workspaceFolder}/target/debug/namesanitizer",
      "cargo": {
        "args": ["build"],
        "filter": {
          "name": "namesanitizer",
          "kind": "bin"
        }
      },
      "args": [
        "rename",
        "--recursive",
        "--clean-style-font",
        "--verbose",
        "--dry-run",
        "C:\\temp"
      ],
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "sourceLanguages": ["rust"],
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "debug"
      },
      "lldb": {
        "displayFormat": "auto", // Exibição automática para tipos complexos.
        "showDisassembly": "always" // Exibe código de máquina se não houver informações de depuração.
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Executable",
      "program": "${workspaceFolder}/target/debug/namesanitizer",
      "args": [
        "rename",
        "--recursive",
        "--clean-style-font",
        "--verbose",
        "--dry-run",
        "C:\\temp"
      ],

      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "preLaunchTask": "cargo build",
      "sourceLanguages": ["rust"],
      "env": {
        "RUST_BACKTRACE": "1",
        "RUST_LOG": "debug"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'namesanitizer'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=namesanitizer",
          "--package=namesanitizer"
        ],
        "filter": {
          "name": "namesanitizer",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
